    option_settings:
  # This section configures the Python container
  aws:elasticbeanstalk:container:python:
    WSGIPath: cocktaildb.wsgi:application # Your project's WSGI file
    # Ensure this is exactly as shown. No extra spaces or mis-indents.

  # This section sets environment variables for your application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: cocktaildb.settings
    PYTHONPATH: "/var/app/current:$PYTHONPATH" # Recommended for Django projects
    DJANGO_DEBUG: "False" # Always False in production!
    # Add your SECRET_KEY here (consider setting this securely in EB console)
    DJANGO_SECRET_KEY: "your_django_secret_key_from_secrets" # Replace with a placeholder, but set via EB console or GitHub Secrets passed to EB
    # If using RDS, you don't typically set RDS_ variables here,
    # Beanstalk provides them automatically if RDS is attached to your environment.
    # DATABASE_URL: # Only if you're using a single DATABASE_URL string

container_commands:
  # Run Django migrations
  01_migrate:
    command: "python manage.py migrate --noinput"
    leader_only: true # Only runs on one instance

  # Collect static files (if serving from S3 or directly)
  02_collectstatic:
    command: "python manage.py collectstatic --noinput"
    leader_only: true # Only runs on one instance