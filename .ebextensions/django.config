option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: cocktaildb.wsgi:application

  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: cocktaildb.settings
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
    DJANGO_DEBUG: "False"
    DJANGO_SECRET_KEY: "your_django_secret_key_from_secrets" # Replace with a placeholder, but set securely
    # If using RDS, you don't typically set RDS_ variables here; Beanstalk provides them automatically.

container_commands:
  01_migrate:
    command: "python manage.py migrate --noinput"
    leader_only: true

  02_collectstatic:
    command: "python manage.py collectstatic --noinput"
    leader_only: true